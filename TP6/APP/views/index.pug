extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Persons List #[a.w3-btn.w3-round.w3-grey(href="/persons/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th Name
          th Idade
          th Distrito
        
        each s in slist
          tr
            td
              a(href="/persons/"+s.id)= s.nome
            td= s.idade
            td= s.morada.distrito
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/persons/edit/"+s.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right.w3-red  
                a(href="/persons/delete/"+s.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}