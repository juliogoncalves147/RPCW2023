extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Person Record: #{a.id}
        .w3-container
            img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
            ul.w3-ul.w3-card-4
                li #[b Nome: ] #{a.nome}
                li #[b Idade: ] #{a.idade}
                li #[b Sexo: ] #{a.sexo}
                li #[b Morada: ] #{a.morada.cidade}, #{a.morada.distrito}
                if a.BI
                    li #[b BI: ] #{a.BI}
                else 
                    li #[b CC: ] #{a.CC}
                if a.descrição
                    li #[b Descrição: ] #{a.descrição}
                if a.profissao
                    li #[b Profissão: ] #{a.profissao}
                if a.partido_politico
                    li #[b Partido Político: ] #{a.partido_politico.party_abbr} - #{a.partido_politico.party_name}
                if a.religiao
                    li #[b Religião: ] #{a.religiao}
                if a.desportos
                    li #[b Desportos: ]
                        each c in a.desportos
                            span #{c} | 
                li #[b Animais: ]
                    each c in a.animais
                        span #{c} | 
                li #[b Figuras Publicas PT: ]
                    each c in a.figura_publica_pt
                        span #{c} | 
                li #[b Carro: ] #{a.marca_carro}
                li #[b Destinos Favoritos: ]
                    each c in a.destinos_favoritos
                        span #{c} |
                if a.comida_favorita
                    li #[b Comida Favorita:] #{a.comida_favorita}
                if a.atributos.fumador
                    li #[b Fumador: ] #{a.atributos.fumador}
                if a.atributos.gosta_cinema
                    li #[b Gosta de cinema: ] #{a.atributos.gosta_cinema}
                if a.atributos.gosta_viajar
                    li #[b Gosta de viajar: ] #{a.atributos.gosta_viajar}
                if a.atributos.acorda_cedo
                    li #[b Acorda cedo: ] #{a.atributos.acorda_cedo}
                if a.atributos.gosta_ler
                    li #[b Gosta de ler: ] #{a.atributos.gosta_ler}
                if a.atributos.gosta_musica
                    li #[b Gosta de música: ] #{a.atributos.gosta_musica}
                if a.atributos.gosta_comer
                    li #[b Gosta de comer: ] #{a.atributos.gosta_comer}
                if a.atributos.gosta_animais_estimacao
                    li #[b Gosta de Animais de Estimação: ] #{a.atributos.gosta_animais_estimacao}
                if a.atributos.gosta_animais_sauvagens
                    li #[b Gosta de Dançar: ] #{a.atributos.gosta_dancar}
        footer.w3-container.w3-teal 
            h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]
