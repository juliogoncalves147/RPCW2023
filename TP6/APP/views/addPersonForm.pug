extends layout 
block content 

    .w3-card-4
        header.w3-container.w3-teal
            h2 Student Form
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label ID
                input.w3-input.w3-round(type="text" name="id")
                label Name
                input.w3-input.w3-round(type="text" name="nome")
                label Idade
                input.w3-input.w3-round(type="number" name="idade")

                fieldset
                    legend Morada 
                    label Cidade
                    input.w3-input.w3-round(type="text" name="morada.cidade")
                    label Distrito
                    input.w3-input.w3-round(type="text" name="morada.distrito")
                p
                label Sexo 
                input.w3-input.w3-round(type="text" name="sexo")
                p
                label BI
                input.w3-input.w3-round(type="text" name="BI")
                label CC
                input.w3-input.w3-round(type="text" name="CC")
                label Descrição
                input.w3-input.w3-round(type="text" name="descrição")
                label Profissão
                input.w3-input.w3-round(type="text" name="profissao")
                
                fieldset 
                    legend Partido Político
                    label Party Abbr
                    input.w3-input.w3-round(type="text" name="partido_politico.party_abbr")
                    label Party Name
                    input.w3-input.w3-round(type="text" name="partido_politico.party_name")
                
                label Religião
                    input.w3-input.w3-round(type="text" name="religiao")

                label Marca de Carro
                    input.w3-input.w3-round(type="text" name="marca_carro")
                p
                label Comida Favorita
                    input.w3-input.w3-round(type="text" name="comida_favorita")                        
                p
                fieldset
                    legend Os diferentes componentes devem ser dividios por virgulas 
                    
                    label Desportos
                    input.w3-input.w3-round(type="text" name="desportos")

                    label Animais
                    input.w3-input.w3-round(type="text" name="animais")

                    label Figuras Publicas PT
                    input.w3-input.w3-round(type="text" name="figura_publica_pt")

                    label Destinos Favoritos
                    input.w3-input.w3-round(type="text" name="destinos_favoritos")
                
                fieldset
                    legend Atributos
                    p
                    label Fumador    
                    input.w3-check(type="checkbox" name="atributos.fumador" value="true" unchecked-value="false")        
                    p
                    label Gosta de cinema    
                    input.w3-check(type="checkbox" name="atributos.gosta_cinema" value="true" unchecked-value="false")                  
                    p
                    label Gosta de viajar    
                    input.w3-check(type="checkbox" name="atributos.gosta_viajar" value="true" unchecked-value="false")                  
                    p
                    label Acorda cedo    
                    input.w3-check(type="checkbox" name="atributos.acorda_cedo" value="true" unchecked-value="false")               
                    p
                    label Gosta de ler    
                    input.w3-check(type="checkbox" name="atributos.gosta_ler" value="true" unchecked-value="false")                 
                    p
                    label Gosta de música    
                    input.w3-check(type="checkbox" name="atributos.gosta_musica" value="true" unchecked-value="false")                  
                    p
                    label Gosta de comer    
                    input.w3-check(type="checkbox" name="atributos.gosta_comer" value="true" unchecked-value="false")                  
                    p
                    label Gosta de animais de estimação    
                    input.w3-check(type="checkbox" name="atributos.gosta_animais_estimacao" value="true" unchecked-value="false")                  
                    p
                    label Gosta de dançar    
                    input.w3-check(type="checkbox" name="atributos.gosta_dancar" value="true" unchecked-value="false")
                    p
        button.w3-btn.w3-teal.w3-mb-2(type="submit") Add
    footer.w3-container.w3-teal
        h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]
                