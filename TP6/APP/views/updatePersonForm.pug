extends layout 
block content 

    .w3-card-4
        header.w3-container.w3-teal
            h2 Person Form Update
        form.w3-container(method="POST" action="/persons/edit")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" value=a.id readonly)
                label Name
                input.w3-input.w3-round(type="text" name="nome" value=a.nome)
                label Idade
                input.w3-input.w3-round(type="number" name="idade" value=a.idade)
                label Sexo
                input.w3-input.w3-round(type="text" name="sexo" value=a.sexo)
                label BI
                input.w3-input.w3-round(type="text" name="BI" value=a.BI)
                label CC
                input.w3-input.w3-round(type="text" name="CC" value=a.CC)
                label Descrição
                input.w3-input.w3-round(type="text" name="descrição" value=a.descrição)
                label Profissão
                input.w3-input.w3-round(type="text" name="profissao" value=a.profissao)
                label Religião
                input.w3-input.w3-round(type="text" name="religiao" value=a.religiao)
                label Marca de Carro
                input.w3-input.w3-round(type="text" name="marca_carro" value=a.marca_carro)
                label Comida Favorita
                input.w3-input.w3-round(type="text" name="comida_favorita" value=a.comida_favorita)
                fieldset
                    legend Morada 
                    label Cidade
                    input.w3-input.w3-round(type="text" name="morada.cidade" value=a.morada.cidade)
                    label Distrito
                    input.w3-input.w3-round(type="text" name="morada.distrito" value=a.morada.distrito)
                fieldset
                    legend Partido Político
                    label Party Abbr
                    input.w3-input.w3-round(type="text" name="partido_politico.party_abbr" value=a.partido_politico.party_abbr)
                    label Party Name
                    input.w3-input.w3-round(type="text" name="partido_politico.party_name" value=a.partido_politico.party_name)
                fieldset
                    legend Os diferentes componentes devem ser dividios por virgulas 
                    label Desportos
                    input.w3-input.w3-round(type="text" name="desportos" value=a.desportos)
                    label Animais
                    input.w3-input.w3-round(type="text" name="animais" value=a.animais)
                p
                fieldset 
                    legend Atributos
                    p
                    label Fumador    
                    input.w3-check(type="checkbox" name="atributos.fumador" value="true" unchecked-value="false")        
                    p
                    label Gosta de cinema    
                    input.w3-check(type="checkbox" name="atributos.gosta_cinema" value="true" unchecked-value="false")                  
                    p
                    label Gosta de viajar    
                    input.w3-check(type="checkbox" name="atributos.gosta_viajar" value="true" unchecked-value="false")                  
                    p
                    label Acorda cedo    
                    input.w3-check(type="checkbox" name="atributos.acorda_cedo" value="true" unchecked-value="false")               
                    p
                    label Gosta de ler    
                    input.w3-check(type="checkbox" name="atributos.gosta_ler" value="true" unchecked-value="false")                 
                    p
                    label Gosta de música    
                    input.w3-check(type="checkbox" name="atributos.gosta_musica" value="true" unchecked-value="false")                  
                    p
                    label Gosta de comer    
                    input.w3-check(type="checkbox" name="atributos.gosta_comer" value="true" unchecked-value="false")                  
                    p
                    label Gosta de animais de estimação    
                    input.w3-check(type="checkbox" name="atributos.gosta_animais_estimacao" value="true" unchecked-value="false")                  
                    p
                    label Gosta de dançar    
                    input.w3-check(type="checkbox" name="atributos.gosta_dancar" value="true" unchecked-value="false")
                    p
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Update
    footer.w3-container.w3-teal
        h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]
        </div>